/* pages/home/home_index.wxss */
@import "../common/footer.wxss";

.home_container {
  position: relative;
  z-index: 1;
  width: 100%;
  height: 100%;
  background-color: whitesmoke;
}

.header {
  z-index: 1000;
  position: fixed;
  top: 0;
  -webkit-transform: translate3d(0, 0, 0);
  transform: translate3d(0, 0, 0);
  -webkit-box-shadow: none;
  box-shadow: none;
  height: 3em;
  background: url(http://szjidingqclxcx.0512iis.com/images/logobag.png);
  background-size: 100% 100%;
  text-align: center;
  color: #fff;
  width: 100%;
}

.scrollview {
  position: absolute;
  padding-top: 3em;
}

.swip {
  height: 12em;
}

.slide-image {
  width: 100%;
  height: 100%;
}

.mui-content-dingzhi {
  width: 100%;
  position: relative;
}

.mui-content-dingzhi-chanpin {
  position: absolute;
  top: 50%;
  left: 50%;
  margin-top: -3em;
  margin-left: -3em;
  width: 6rem;
  height: 6rem;
  background-color: red;
  color: #fff;
  font-size: 1em;
  line-height: 6rem;
  text-align: center;
  border: 0.1rem solid white;
  border-radius: 50%;
}

.dingzhi_grid {
  font-size: 0;
  display: block;
  width: 100%;
  white-space: normal;
  position: relative;
  margin-top: 0;
  margin-bottom: 0;
  padding-left: 0;
  list-style: none;
  background-color: #fff;
}

.dingzhi_cell {
  width: 50%;
  font-size: 17px;
  display: inline-block;
  margin-right: -4px;
  text-align: center;
  vertical-align: middle;
  background: none;
}

.dingzhi_cell_item {
  margin: 10px;
  width: 90%;
  border: 1px solid red;
  overflow: hidden;
  position: relative;
}

.dingzhi_cell_item2 {
  margin: 10px;
  width: 90%;
  border: 1px solid red;
  overflow: hidden;
  position: relative;
}

.dingzhi_cell_image {
  width: 100%;
  vertical-align: top;
  opacity: 0.4;
  height: 8rem !important;
}

.dingzhi_cell_title {
  display: block;
  width: 100%;
  margin-top: 8px;
  text-overflow: ellipsis;
  color: #333;
  position: absolute;
  top: 50%;
  left: 0;
  margin-top: -1rem !important;
  height: 2rem !important;
  line-height: 2rem !important;
  font-weight: 600;
  font-size: 1.5rem !important;
}


.content_image_layout {
  margin: 10px;
}

.content_image {
  width: 100%;
  height: 6em;
  border-radius: 10px;
}
